<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".complainer.complainerAddComplaintActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@color/blue4"
            android:text="New Complaint"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/work_Image"
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:background="@mipmap/clicktosnap"
            android:minHeight="200dp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/blue4"
            android:gravity="center"
            android:text="Complaint Info"
            android:textColor="@color/blue" />

        <EditText
            android:id="@+id/pTitleEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter title..."
            android:padding="10dp"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/statusTv"
                android:layout_width="256dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:text="Status"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/StatusSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:clickable="true"
                android:entries="@array/statusStage"
                android:focusable="false"
                android:saveEnabled="true"
                android:spinnerMode="dropdown" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="256dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:text="WorkType"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/workTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:spinnerMode="dropdown"
                android:entries="@array/workType"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/location"
                    android:layout_width="129dp"
                    android:layout_height="29dp"
                    android:layout_weight="1"
                    android:background="@color/blue"
                    android:gravity="center|left"
                    android:text="Location"
                    android:textIsSelectable="false"
                    android:textStyle="bold" />

            </LinearLayout>

            <EditText
                android:id="@+id/locationComplainer"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Enter your location." />

        </LinearLayout>




